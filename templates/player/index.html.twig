{% extends 'base.html.twig' %}

{% block title %}Add player{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table, th, td {
  border: 1px solid black;
}
</style>

<div class="example-wrapper">
    <h1>Add player</h1>
{% for message in app.flashes('notice') %}
        <p> {{message}} </p>
{% endfor %}

    List of players:
 <table style="">
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th>Team</th>
  </tr>
{% for player in players %}  
  <tr>
    <td>{{player.id}}</td>
    <td>{{player.email}}</td>
    <td>{{player.team.title}}</td>
  </tr>
{% endfor %}  
</table>
    <form action="{{path('player-create')}}" method="POST"> 
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email"
        class="form-control" name="email" id="" aria-describedby="helpId" placeholder="example@maxo.rs">
      
    </div>
   <div class="form-group">
     <label for="team">Team</label>
     <select class="form-control" name="team" id="">
      {% for team in teams %}
    <option value="{{team.id}}">{{team.title}}</option>  
{% endfor %}
      
      
       
      
     </select>
   </div>
      <div class="form-group">
     <label for="season">Season</label>
     <select class="form-control" name="season" id="">
     {% for season in seasons %}
       <option value="{{season.id}}">{{season.title}}</option> 
{% endfor %}
     </select>
   </div>
  <button type="submit" class="btn btn-primary">Insert</button>
    
    </form>
</div>
{% endblock %}
